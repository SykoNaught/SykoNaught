{
  "version": 2,
  "projects": [
    {
      "name": "frontend",
      "source": "frontend",
      "buildCommand": "npm run build",
      "outputDirectory": "build",
      "framework": "create-react-app"
    },
    {
      "name": "backend",
      "source": "backend",
      "buildCommand": "npm run build",
      "outputDirectory": ".next",
      "framework": "nextjs"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/frontend/:path*"
    }
  ]
}
